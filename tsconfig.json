{
  "include": [
    "lib/**/*.js"
  ],
  "compilerOptions": {
    "rootDir": ".",
    "target": "ES2016",
    "lib": [
      "ES2016"
    ],

    "noEmit": true,

    "allowJs": true,
    "checkJs": true,
    "maxNodeModuleJsDepth": 0,

    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,

    "stripInternal": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,

    "typeRoots": [
      "node_modules/bts-type-deps/types"
    ]
  }
}
